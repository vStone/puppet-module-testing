<%
context = "*[label() != '#comment'][. = '#{@name}']"
options = scope.function_parse_autofs_options([@options])
-%>

rm <%= context %>/opt
<%
  options.keys.sort.each do |k|
  opt = k
  value = options[k]
-%>
set <%= context %>/opt[last() + 1] '<%= opt %>'
  <% unless value.nil? or value.empty? -%>
set <%= context %>/opt[last()]/value '<%= value %>'
  <% end -%>
<% end -%>

rm <%= context %>/location
set <%= context %>/location/01/host '<%= @host %>'
set <%= context %>/location/01/path '<%= @location %>'
